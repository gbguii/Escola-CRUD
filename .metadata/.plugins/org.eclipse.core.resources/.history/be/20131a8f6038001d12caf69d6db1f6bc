package obj;

import java.util.List;

public class ProfessorObj extends BasicObj{
	
	/** Identificador do professor.*/
	private Long id;
	/** Primeiro nome do professor.*/
	private String firstName;
	/** Último nome do professor.*/
	private String lastName;
	/** Curso que o professor leciona.*/
	private CourseObj course;
	
	/**
	 * Construtor padrão.
	 */
	public ProfessorObj() {
		
	}
	
	/**
	 * Construtor recebendo valores.
	 * @param firstName		Primeiro nome do professor.
	 * @param lastName		Último nome do professor.
	 * @param course		Curso que professor leciona.
	 */
	public ProfessorObj(String firstName, String lastName, CourseObj course) {
		this.firstName = firstName;
		this.lastName = lastName;
		this.course = course;
	}
	
	/**
	 * Retorna o primeiro nome do professor.
	 * @return o primeiro nome do professor.
	 */
	public String getFirstName() {
		return firstName;
	}
	
	/**
	 * Define o primeiro nome do professor
	 * @param firstName o primeiro nome do professor.
	 */
	public void setFirstName(String firstName) {
		this.firstName = firstName;
	}
	
	/**
	 * Retorna o último nome do professor.
	 * @return o último nome do professor.
	 */
	public String getLastName() {
		return lastName;
	}
	
	/**
	 * Define o último nome do professor.
	 * @param lastName o último nome do professor.
	 */
	public void setLastName(String lastName) {
		this.lastName = lastName;
	}
	
	/**
	 * Retorna o curso em que o professor leciona.
	 * @return o curso em que o professor leciona.
	 */
	public CourseObj getCourse() {
		return course;
	}
	
	/**
	 * Define o curso em que o professor leciona.
	 * @param course o curso em que o professor leciona.
	 */
	public void setCourse(CourseObj course) {
		this.course = course;
	}
	
	
}
